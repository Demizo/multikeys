<Window x:Class="MultikeysEditor.View.Dialogues.ChangePhysicalLayoutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:MultikeysEditor.Properties"
        xmlns:local="clr-namespace:MultikeysEditor.View.Dialogues"
        mc:Ignorable="d"
        Title="{x:Static p:Strings.WindowTitleChangePhysicalLayout}" Height="215.195" Width="313.992"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{x:Static p:Strings.PromptPhysicalLayoutChoose}"/>
            <StackPanel x:Name="StackPanelOptions" Orientation="Vertical"/>
            <CheckBox x:Name="CheckBoxBigEnter" Content="{x:Static p:Strings.PromptPhysicalLayoutUseBigEnter}"/>
            <Button x:Name="ButtonConfirm"
                Content="{x:Static p:Strings.PromptPhysicalLayoutConfirm}"
                Height="23" Width="Auto" MinWidth="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="ButtonConfirm_Click"/>
        </StackPanel>
    </Grid>
</Window>

<UserControl x:Class="MultikeysGUI.View.Controls.KeyboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultikeysGUI.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
        <DockPanel LastChildFill="False" Margin="0" >

            <local:ModifiersControl x:Name="ModifiersControl" Margin="0" DockPanel.Dock="Top" ModifierSelectionChanged="ModifierSelectionChanged"/>
            <local:LayerControl x:Name="Layer" Margin="0" Width="Auto" KeyClicked="LayerKeyClicked" />

        </DockPanel>

    </Grid>
</UserControl>

<UserControl x:Class="MultikeysGUI.View.Controls.LayoutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:p="clr-namespace:MultikeysGUI.Properties"
             xmlns:local="clr-namespace:MultikeysGUI.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="535.5" d:DesignWidth="1324.5">
    <Grid>

        <Grid x:Name="KeyboardsView">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Width="Auto" MinWidth="1000">
                <StackPanel Width="Auto" x:Name="KeyboardStack" Orientation="Vertical" Margin="5" Grid.Column="0"/>
            </ScrollViewer>

            <local:CommandPanel x:Name="SummaryPanel" Grid.Column="1" Margin="10" Width="Auto" Height="Auto"/>

        </Grid>

    </Grid>
</UserControl>
